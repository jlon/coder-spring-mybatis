html {
    background: #656565;
}
body {
    padding-top: 1px;
}
.login_w {
    position: relative;
    width: 407px;
    margin: 80px auto 0;
}
.logo_w {
    position: absolute;
    z-index: 2;
    width: 100%;
    height: 419px;
    -webkit-animation: logo 10s infinite;
    animation: logo 10s infinite;
}
.logo {
    display: block;
    z-index: 10;
    width: 132px;
    margin: 0 auto;
}
.word {
    position: absolute;
    top: 30px;
    left: 0;
    z-index: 1;
    width: 407px;
    -webkit-animation: word 10s infinite;
    animation: word 10s infinite;
}
.login_c {
    position: relative;
    z-index: 2;
    overflow: hidden;
}
.email, .password {
    display: block;
    width: 255px;
    height: 38px;
    margin: 0 auto;
    border-radius: 5px;
    background: #f8f8f8;
    color: #848484;
    text-indent: 18px;
    font-size: 15px;
}
.email {
    margin-top: 125px;
}
.password {
    margin-top: 40px;
}
.btn_w {
    margin-top: 50px;
    text-align: center;
}
input.login_btn {
    width: 90px;
    height: 38px;
    margin-right: 40px;
    border: 1px solid #ffffff;
    border-radius: 5px;
    background: none;
    font-size: 15px;
    color: #ffffff;
    cursor: pointer;
}
.forget_psw, a:link {
    font-size: 15px;
    text-decoration: underline;
    color: #ffffff;
    cursor: pointer;
}
@-webkit-keyframes logo {
    0% {
        transform: rotateZ(0deg)
    }
    25%{
        transform: rotateZ(360deg)
    }
    50%{
        transform: rotateZ(360deg)
    }
    75%{
        transform: rotateZ(0deg)
    }
    100% {
        transform: rotateZ(0deg)
    }
}
@-webkit-keyframes word {
    0% {
        transform: rotateY(0deg)
    }
    25%{
        transform: rotateY(0deg)
    }
    50%{
        transform: rotateY(180deg)
    }
    75%{
        transform: rotateY(180deg)
    }
    100% {
        transform: rotateY(0deg)
    }
}
@keyframes logo {
    0% {
        transform: rotateZ(0deg)
    }
    25%{
        transform: rotateZ(360deg)
    }
    50%{
        transform: rotateZ(360deg)
    }
    75%{
        transform: rotateZ(0deg)
    }
    100% {
        transform: rotateZ(0deg)
    }
}
@keyframes word {
    0% {
        transform: rotateY(0deg)
    }
    25%{
        transform: rotateY(0deg)
    }
    50%{
        transform: rotateY(180deg)
    }
    75%{
        transform: rotateY(180deg)
    }
    100% {
        transform: rotateY(0deg)
    }
}
